<Window x:Class="FaceRecognition.ViewCamera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceRecognition"
        mc:Ignorable="d"
        Title="ViewCamera" Height="550" Width="800" Background="#C4C4C4"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="7*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="ComboBoxWebcams" Grid.Row="0"
                  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></ComboBox>

        <Image x:Name="ImageWebcamFrame" Grid.Row="1"></Image>

        <StackPanel Grid.Row="2">
            <Label Content=""/>
            <Button x:Name="ButtonPhoto" Content="Next"/>
        </StackPanel>
    </Grid>
</Window>